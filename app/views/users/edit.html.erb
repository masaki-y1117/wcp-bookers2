<h1>User info</h1>
<% if @user.errors.any? %>
  <h2>
    <%= @user.errors.count %>error prohibited this obj from being saved:
  </h2>
  <% @user.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName" style="display: block;">Name</label>
  <%= f.text_field :name %>
  <label for="inputImage" style="display: block;">Image</label>
  <%= f.attachment_field :profile_image %>
  <label for="inputIntroduction" style="display: block;">introduction</label>
  <%= f.text_area :introduction %>
  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>
