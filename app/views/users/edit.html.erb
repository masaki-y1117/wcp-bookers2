<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <h2>
          <%= @user.errors.count %>error prohibited this obj from being saved:
        </h2>
        <% @user.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName" style="display: block;">Name</label>
          <%= f.text_field :name, class:"form-control name" %>
        </div>
        <div class="form-group">
          <label for="inputImage" style="display: block;">Image</label>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction" style="display: block;">introduction</label>
          <%= f.text_area :introduction, class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
