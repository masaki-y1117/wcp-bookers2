<%= render 'books/list', book: @book, user: @user %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to users_path do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>