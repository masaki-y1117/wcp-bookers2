<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpg" %>
      
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
        <% if @book.user == current_user %>
          <%= link_to edit_user_path(@book.user) do %>
            <p class="btn btn-outline-secondary btn-block fas fa-user-cog">
            </p>
          <% end %>
        <% else %>
          <%= link_to edit_user_path(@book.user) do %>
            <p class="btn btn-outline-secondary btn-block fas fa-user-cog">
            </p>
          <% end %>
        <% end %>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body%></td>
          <% if @book.user == current_user %>
            <div class="comment-delete">
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            </div>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>