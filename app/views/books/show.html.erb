<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Book detail</h1>
<table>
  <tr>
    <td>
      <%= link_to users_path do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(@book) do %>
        <%= @book.title %>
      <% end %>
      </td>
    <td><%= @book.body%></td>
    <td><%= link_to "Edit", edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
</table>