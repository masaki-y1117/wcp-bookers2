<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpg" %>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th>test</th>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </tbody>
</table>

<% if user == current_user %>
  <p><%= link_to "プロフ編集", edit_user_path(user) %></p>
<% end %>

<h1>New book</h1>
<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
