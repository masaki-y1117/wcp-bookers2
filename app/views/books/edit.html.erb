<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <h2>
          <span class="text-danger"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</span>
        </h2>
        <% @book.errors.full_messages.each do |message| %>
          <p class="text-danger"><%= message %></p>
        <% end %>
      <% end %>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="bookTitle" style="display:block">Title</label>
          <%= f.text_field :title, class:"form-control title" %>
        </div>
        <div class="form-group">
          <label for="bookBody" style="display:block">Opinion</label>
          <%= f.text_area :body, class:"form-control body" %>
        </div>
        <div>
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to "Show ", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

