<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
    <label for="bookTitle" style="display:block">Title</label>
    <%= f.text_field :title %>
    <label for="bookBody" style="display:block">Opinion</label>
    <%= f.text_area :body %>
  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>
